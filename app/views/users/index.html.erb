<p id="notice"><%= notice %></p>

<h1>ユーザー一覧</h1>

<%= form_tag({:action=>"search"}) do %>
<%= text_field_tag "search[username]" , @search_value %>
<%= submit_tag "検索" %>
<%= link_to "リセット", users_path %>
<% end %>


<table>
  <thead>
    <tr>
      <th><font size="2">ユーザーID</font></th>
      <th><font size="2">名前</font></th>
      <th><font size="2">パスワード</font></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.userid %></td>
        <td><%= user.username %></td>
        <td><%= user.password %></td>
        <font size="2"><td><%= link_to '詳細', user %></font></td>
        <font size="2"><td><%= link_to '更新', edit_user_path(user) %></font></td>
        <font size="2"><td><%= link_to '削除', user, method: :delete, data: { confirm: '削除しますか?' } %></font></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<font size="2"><%= link_to 'ユーザー登録', new_user_path %></font>
