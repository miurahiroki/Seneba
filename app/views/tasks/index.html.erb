<p id="notice"><%= notice %></p>

<font size="5">タスク一覧</font>

<%= form_tag({:action => "search"}) do %>   
<%= collection_select 'search', 'user', User.all, :username, :username, {selected: @search_user,include_blank: "全員"} %>
<%= collection_select 'search', 'category', Category.all, :categoryname, :categoryname, {selected: @search_category,include_blank: "全カテゴリー"} %>   
   
  <%= text_field_tag "search[name]",@search_value %>  
    
  <%= submit_tag "検索" %>    
  <%= link_to "リセット", tasks_path%>    
<% end %>    
    
  
  

<table>
  <thead>
    <tr>
      <th><font size="4">日付</font></th>
      <th><font size="4">カテゴリー</font></th>
      <th><font size="4">予定内容</font></th>
      <th><font size="4">チェック</font></th>
      <th><font size="4">ユーザーID</font></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.due_date %></td>
        <td><%= task.category_id %></td>
        <td><%= task.name %></td>
        <td><%= task.done %></td>
        <td><%= task.user_id %></td>
        <font size="4"><td><%= link_to '詳細', task %></font></td>
        <font size="4"><td><%= link_to '更新', edit_task_path(task) %></font></td>
        <font size="4"><td><%= link_to '削除', task, method: :delete, data: { confirm: '削除しますか?' } %></font></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<font size="4"><%= link_to 'タスク登録', new_task_path %></font>
