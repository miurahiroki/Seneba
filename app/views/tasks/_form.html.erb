    <font size="3">カテゴリー</font><br>
    <%= f.collection_select :category_id,Category.all ,:categoryname,:categoryname %>
  </div>
  <div class="field">
    <font size="3">予定内容</font><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <font size="3">チェック</font><br>
    <%= f.check_box :done %>
  </div>
  <div class="field">
    <font size="3">ユーザーID</font><br>
    <%= f.collection_select :user_id,User.all ,:username,:username %> 
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
