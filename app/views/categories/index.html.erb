<p id="notice"><%= notice %></p>

<h1>カテゴリー一覧</h1> 

<table>
  <thead>
    <tr>
      <th><font size="2">カテゴリー名</font></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.categoryname %></td>
        <td><font size="2"><%= link_to '詳細', category %></font></td>  
        <td><font size="2"><%= link_to '更新', edit_category_path(category) %></font></td>  
        <td><font size="2"><%= link_to '削除', category, method: :delete, data: { confirm: '削除しますか?' } %></font></td>  

      </tr>
    <% end %>
  </tbody>
</table>

